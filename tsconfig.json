{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "module": "NodeNext",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
